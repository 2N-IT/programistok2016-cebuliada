var answerId = <%= @answer.id %>
var currentScore = parseInt($('#current_score').val()) + parseInt(<%= @answer.points %>)
var scope = $('#answer_' + answerId)
$('a', scope).addClass('disabled')
$('#current_score').val(currentScore)
var validAnswers = localStorage.getItem('validAnswers')
localStorage.setItem('validAnswers', validAnswers.push(answerId))
